
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- PUBLIC DATA (Read-only for everyone, Write for authenticated/admin) ---
    
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /reviews/{reviewId} {
      allow read: if true;
      // Allow create if userId matches
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow update/delete if userId matches
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- PRIVATE USER DATA (Strict Ownership) ---

    // Customers: Users can only access their own profile
    match /customers/{customerId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Orders: Users can only access their own orders
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Catch-all for any other collections to default to private user ownership
    match /{document=**} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
